<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/tv_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매번 똑같은 자기소개에 질렸다면?\n자기소개를 FUN, COOL, FOXY하게"
            android:textColor="@color/black"
            android:layout_marginTop="103dp"
            android:textFontWeight="700"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        
        <ImageView
            android:id="@+id/iv_main_logo"
            android:layout_width="142dp"
            android:layout_height="61dp"
            android:layout_marginTop="26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_main_title"
            android:src="@drawable/ic_logo"
            />

        <ImageView
            android:id="@+id/iv_malpungsun"
            android:layout_width="104dp"
            android:layout_height="108dp"
            android:layout_marginTop="41dp"
            android:layout_marginStart="34dp"
            android:src="@drawable/ic_malpoongsun"
            app:layout_constraintTop_toBottomOf="@id/iv_main_logo"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageView
            android:id="@+id/iv_init_ssung"
            android:layout_width="202dp"
            android:layout_height="222dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_init_ssung"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="123dp"
            app:layout_constraintTop_toBottomOf="@id/iv_main_logo"
            />

        <ImageView
            android:id="@+id/btn_main_start"
            android:layout_width="224dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="47dp"
            android:src="@drawable/start_btn"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/iv_init_ssung"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>